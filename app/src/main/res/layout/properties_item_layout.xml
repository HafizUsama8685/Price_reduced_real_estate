    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/property_Item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_placeholder"
            android:background="@android:color/white"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_Property_Item_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="sdfhjaadhskadkadkfdkaksakfdkssssssssssssssssssssssssssdkdfsddddkshdddddddddsjdhfjdfhsdhfjsdsjksdkfalsldjlsdsjfdsfdbcmxmcxljhdsajldshajsdjsjfasldalallasdlflsdsldflsflsdfslj"
            android:layout_below="@id/property_Item_image"
            />
        <TextView
            android:id="@+id/tv_Property_Item_Area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:layout_below="@id/tv_Property_Item_Description"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_Property_Item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="state"
            android:layout_below="@id/tv_Property_Item_Description"
            android:layout_toRightOf="@id/tv_Property_Item_Area"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>