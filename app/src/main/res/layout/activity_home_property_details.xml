                            android:id="@+id/Homeimage_slider"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:iss_auto_cycle="false"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            />
                        <!--            <ImageButton-->
                        <!--                android:id="@+id/imageSwitcherbtnLeft"-->
                        <!--                android:layout_width="50dp"-->
                        <!--                android:layout_height="100dp"-->
                        <!--                android:src="@drawable/ic_baseline_chevron_left_24"-->
                        <!--                android:layout_marginStart="10dp"-->
                        <!--                android:background="@android:color/transparent"-->
                        <!--                app:layout_constraintBottom_toBottomOf="@id/image_slider"-->
                        <!--                app:layout_constraintTop_toTopOf="@id/image_slider"-->
                        <!--                app:layout_constraintLeft_toLeftOf="@id/image_slider"/>-->
                        <!--            <ImageButton-->
                        <!--                android:id="@+id/imageSwitcherbtnRight"-->
                        <!--                android:layout_width="50dp"-->
                        <!--                android:layout_height="100dp"-->
                        <!--                android:src="@drawable/ic_baseline_chevron_right_24"-->
                        <!--                android:layout_marginEnd="10dp"-->
                        <!--                android:background="@android:color/transparent"-->
                        <!--                app:layout_constraintRight_toRightOf="@id/image_slider"-->
                        <!--                app:layout_constraintBottom_toBottomOf="@id/image_slider"-->
                        <!--                app:layout_constraintTop_toTopOf="@id/image_slider"-->
                        <!--                />-->
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/HomeImageSwitcherLayout"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/HometvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="Description:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_below="@id/HometvDescription"
                        android:text="Description"/>
                    <TextView
                        android:id="@+id/HometvPropType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailDescription"
                        android:layout_marginTop="5dp"
                        android:text="PropertyType:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/HometvPropType"
                        android:layout_below="@id/HomepropDetailDescription"
                        android:textSize="14sp"
                        android:text="PropType"/>
                    <TextView
                        android:id="@+id/HometvPropState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropType"
                        android:layout_marginTop="5dp"
                        android:text="State:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/HometvPropState"
                        android:layout_below="@id/HometvPropType"
                        android:text="State"/>
                    <TextView
                        android:id="@+id/HometvPropAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropState"
                        android:layout_marginTop="5dp"
                        android:text="Address:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_below="@id/HometvPropState"
                        android:layout_toRightOf="@id/HometvPropAddress"
                        android:text="State"/>
                    <TextView
                        android:id="@+id/HometvPropContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropAddress"
                        android:layout_marginTop="5dp"
                        android:text="Contact Number:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_below="@id/HometvPropAddress"
                        android:layout_toRightOf="@id/HometvPropContact"
                        android:text="contact"/>
                    <TextView
                        android:id="@+id/HometvPropArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropContact"
                        android:layout_marginTop="5dp"
                        android:text="Area:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_below="@id/HometvPropContact"
                        android:layout_toRightOf="@id/HometvPropArea"
                        android:text="State"/>
                    <TextView
                        android:id="@+id/HometvPropPriceWas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropArea"
                        android:layout_marginTop="5dp"
                        android:text="Price Was:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropPriceWas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/HometvPropPriceWas"
                        android:layout_below="@id/HometvPropArea"
                        android:text="State"/>
                    <TextView
                        android:id="@+id/HometvPropPriceReduced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/HomepropDetailPropPriceWas"
                        android:layout_marginTop="5dp"
                        android:text="Price Reduced:"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/HomepropDetailPropPriceReduced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/HometvPropPriceReduced"
                        android:layout_below="@id/HometvPropPriceWas"
                        android:text="State"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/HomepropDetailPropPriceReduced">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/HomebtnEditProperty"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Edit"
                            android:layout_marginTop="10dp"
                            android:textAllCaps="false"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/HomebtnDeleteProperty"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Delete"
                            android:layout_toRightOf="@id/HomebtnEditProperty"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textAllCaps="false"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>